{
  "name": "@tombcato/smart-ticker",
  "version": "1.2.3",
  "description": "High-Performance Text Diff Motion Component based on Levenshtein diff algorithm. Make your text flow like water.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./vue": {
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs",
      "types": "./dist/vue.d.ts"
    },
    "./svelte": {
      "import": "./dist/svelte.js",
      "require": "./dist/svelte.cjs",
      "types": "./dist/svelte.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "ticker",
    "animation",
    "react",
    "vue",
    "svelte",
    "text-animation",
    "counter",
    "odometer",
    "number-flow",
    "text-flow",
    "Text Diff",
    "Levenshtein diff",
    "flip-clock"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tombcato/smart-ticker.git"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "vue": ">=3.0.0",
    "svelte": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    }
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "svelte": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "dependencies": {
    "@stackblitz/sdk": "^1.11.0"
  }
}
